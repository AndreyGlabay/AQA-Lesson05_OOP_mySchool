<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.1.dtd">

<suite name="mySchoolSuite" verbose="2" thread-count="4" parallel="tests">  <!-- Discover parallel = "test" -->
<!-- suite name="mySchoolSuite" thread-count="4" parallel="classes" -->      <!-- Discover parallel = "classes" -->
<!-- suite name="mySchoolSuite" thread-count="4" parallel="instances" -->    <!-- Discover parallel = "instances" -->
<!-- suite name="mySchoolSuite" thread-count="4" parallel="methods" -->      <!-- Discover parallel = "methods" -->
<!-- suite name="mySchoolSuite" thread-count="4" parallel="true" -->         <!-- Discover parallel = "true" -->

    <test name="TestCase1::mySchoolFunctionalTests">
        <groups>
            <run>
                <include name="group0"/>
                <include name="group1"/>

            </run>
        </groups>
        <classes>
            <class name="com.example.school.tests.MainTests"/>
            <class name="com.example.school.tests.ObjectDataTests"/>
        </classes>
    </test>
    <test name="TestCase2::mySchoolPriorityTests">
        <groups>
            <run>
                <include name="group0"/>
                <include name="groupA"/>
                <include name="groupB"/>
            </run>
            <dependencies>
                <group name="groupA" depends-on="groupB"/>
                <group name="groupC" depends-on="group1"/>
            </dependencies>
        </groups>
        <classes>
            <class name="com.example.school.tests.PriorityTests"/>
        </classes>
    </test>
</suite>

